===============================================================================
simple-class
===============================================================================
Test that a simple class appears in the architecture graph.
lang: typescript

--- file: sample/src/lib.ts ---

class Animal {
    name: string;

    constructor(name: string) {
        this.name = name;
    }

    speak(): void {
        console.log(this.name);
    }
}

class Dog extends Animal {
    breed: string;

    constructor(name: string, breed: string) {
        super(name);
        this.breed = breed;
    }

    bark(): void {
        console.log("Woof!");
    }
}

