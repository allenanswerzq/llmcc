def use_lambdas():
    # Simple lambda
    identity = lambda x: x
    
    # Multiple args
    add = lambda a, b: a + b
    
    # With default
    greet = lambda name="world": f"Hello, {name}"
    
    # Used immediately
    result = (lambda x: x * 2)(5)
    
    return result

def higher_order(items: list) -> list:
    return list(map(lambda x: x * 2, items))

class Processor:
    transform = lambda self, x: x.upper()

