class HttpCode(IntEnum):
    OK = 200
    NOT_FOUND = 404
    SERVER_ERROR = 500

class Permission(Flag):
    READ = auto()
    WRITE = auto()
    EXECUTE = auto()
    ALL = READ | WRITE | EXECUTE

