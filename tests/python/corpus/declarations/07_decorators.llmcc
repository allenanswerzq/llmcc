def decorator(func):
    return func

def with_args(arg):
    def inner(func):
        return func
    return inner

@decorator
def decorated():
    pass

@with_args("test")
def decorated_with_args():
    pass

@decorator
@with_args("chain")
def chained():
    pass

@decorator
class DecoratedClass:
    value: int

    @decorator
    def method(self):
        pass

