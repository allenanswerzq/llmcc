from dataclasses import dataclass

@dataclass
class Point:
    x: int
    y: int

def logger(func):
    def wrapper(*args):
        return func(*args)
    return wrapper

@logger
def process(data):
    return data

class Handler:
    @staticmethod
    def handle_static():
        pass

    @classmethod
    def handle_class(cls):
        pass

    @property
    def name(self):
        return "handler"

