--- file: sample/base.py ---
from abc import ABC, abstractmethod

class Animal(ABC):
    @abstractmethod
    def speak(self) -> str:
        pass

class Mammal(Animal):
    def breathe(self) -> None:
        pass

lang: python

--- file: sample/animals.py ---
from .base import Animal, Mammal

class Dog(Mammal):
    def speak(self) -> str:
        return "woof"

class Cat(Mammal):
    def speak(self) -> str:
        return "meow"

class Bird(Animal):
    def speak(self) -> str:
        return "chirp"

