===============================================================================
shadowing-in-scope
===============================================================================
Test that inner scope shadows outer scope.
lang: cpp

--- file: sample/CMakeLists.txt ---
cmake_minimum_required(VERSION 3.10)
project(sample)

--- file: sample/src/lib.cpp ---
struct Value {
    int x;
};

void outer_scope() {
    Value v1;
    {
        struct Value {
            double y;
        };
        Value v2;
    }
}

--- expect:block-graph ---
(root:1 lib ($TMP/sample/src/lib.cpp)
  (class:2 Value
    (field:3 int @type int)
  )
  (func:4 outer_scope
    (class:5 Value
      (field:6 double @type double)
    )
    (@tdep:5 Value)
  )
)
