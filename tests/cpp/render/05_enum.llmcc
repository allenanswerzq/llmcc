===============================================================================
enum
===============================================================================
Test that enums appear in the architecture graph.
lang: cpp

--- file: sample/CMakeLists.txt ---
cmake_minimum_required(VERSION 3.10)
project(sample)

--- file: sample/src/lib.cpp ---

enum Color {
    Red,
    Green,
    Blue
};

enum class Status {
    Active,
    Inactive,
    Pending
};

struct Widget {
    Color color;
    Status status;
};

--- expect:block-graph ---
(root:1 enum Color {
    Red,
    Green,
    Blue
};

enum class Status {
    Active,
    Inactive,
    Pending
};

struct Widget {
    Color color;
    Status status;
};
 ($TMP/sample/src/lib.cpp)
  (enum:2 Color
    (field:3 Red @type:3 Red)
    (field:4 Green @type:4 Green)
    (field:5 Blue @type:5 Blue)
  )
  (enum:6 Status
    (field:7 Active @type:7 Active)
    (field:8 Inactive @type:8 Inactive)
    (field:9 Pending @type:9 Pending)
  )
  (class:10 Widget
    (field:11 Color @type:2 Color)
    (field:12 Status @type:6 Status)
  )
)
