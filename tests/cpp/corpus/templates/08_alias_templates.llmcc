Template type aliases.
lang: cpp

--- file: src/lib.cpp ---
template<typename T>
using Ptr = T*;

template<typename T>
using Vec = T[];

template<typename K, typename V>
struct Pair { K key; V val; };

template<typename T>
using IntPair = Pair<int, T>;

Ptr<int> p;
IntPair<double> ip;

