Auto return type deduction.
lang: cpp

--- file: src/lib.cpp ---
auto add(int a, int b) {
    return a + b;
}

auto lambda = [](int x) { return x * 2; };

template<typename T, typename U>
auto combine(T t, U u) -> decltype(t + u) {
    return t + u;
}

class Calculator {
public:
    auto calculate(int x) -> int {
        return x * x;
    }
};

