void test_range_for() {
    int arr[] = {1, 2, 3, 4, 5};

    for (int x : arr) {}

    for (auto& x : arr) {
        x *= 2;
    }

    for (const auto& x : arr) {}

    for (auto&& x : arr) {}
}

