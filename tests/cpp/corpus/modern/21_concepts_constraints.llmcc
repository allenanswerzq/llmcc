template<typename T>
concept Integral = sizeof(T) <= sizeof(long long);

template<typename T>
concept Addable = requires(T a, T b) { a + b; };

template<typename T>
requires Integral<T> && Addable<T>
T process(T a, T b) {
    return a + b;
}

template<Integral T>
class IntContainer {
    T value;
};

