template<typename T>
concept Hashable = requires(T a) {
    { a.hash() } -> Numeric;
};

template<typename T>
concept Container = requires(T c) {
    c.size();
    c.begin();
    c.end();
    typename T::value_type;
    { c.empty() } -> bool;
};

template<typename T>
requires requires(T x) { x + x; }
T double_value(T x) { return x + x; }

