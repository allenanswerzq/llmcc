PIMPL idiom pattern.
lang: cpp

--- file: src/lib.cpp ---
class Widget {
public:
    Widget();
    ~Widget();

    Widget(const Widget&) = delete;
    Widget& operator=(const Widget&) = delete;

    void doSomething();

private:
    class Impl;
    Impl* pImpl;
};

class Widget::Impl {
public:
    int data;
    void internalMethod() {}
};

Widget::Widget() : pImpl(new Impl()) {}
Widget::~Widget() { delete pImpl; }
void Widget::doSomething() { pImpl->internalMethod(); }

