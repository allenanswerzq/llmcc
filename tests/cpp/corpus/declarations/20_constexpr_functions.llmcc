constexpr int factorial(int n) {
    return n <= 1 ? 1 : n * factorial(n - 1);
}

constexpr double pi() { return 3.14159; }

class Circle {
    double radius;
public:
    constexpr Circle(double r) : radius(r) {}
    constexpr double area() const { return pi() * radius * radius; }
};

