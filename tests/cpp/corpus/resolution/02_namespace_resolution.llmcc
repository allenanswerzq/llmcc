namespace outer {
    namespace inner {
        class Widget {
        public:
            void method() {}
        };

        void helper() {}
    }

    void use_inner() {
        inner::Widget w;
        w.method();
        inner::helper();
    }
}

void use_outer() {
    outer::inner::Widget w;
    outer::use_inner();
}

