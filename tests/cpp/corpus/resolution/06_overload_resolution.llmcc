Overload resolution.
lang: cpp

--- file: src/lib.cpp ---
void func(int x) {}
void func(double x) {}
void func(int x, int y) {}

struct Overloaded {
    void method(int x) {}
    void method(double x) {}
    void method(const char* s) {}
};

void test_overload() {
    func(42);
    func(3.14);
    func(1, 2);

    Overloaded o;
    o.method(10);
    o.method(1.5);
    o.method("hello");
}

