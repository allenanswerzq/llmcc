void control_flow(int x) {
    if (x > 0) {
        x++;
    } else {
        x--;
    }

    for (int i = 0; i < 10; i++) {
        x += i;
    }

    while (x > 0) {
        x--;
    }

    do {
        x++;
    } while (x < 10);

    switch (x) {
        case 0: break;
        case 1: x++; break;
        default: x--;
    }
}

