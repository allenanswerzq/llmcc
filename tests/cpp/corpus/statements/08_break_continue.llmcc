void test_break_continue() {
    for (int i = 0; i < 100; i++) {
        if (i == 50) break;
        if (i % 2 == 0) continue;
    }

    int x = 0;
    while (true) {
        x++;
        if (x >= 10) break;
    }

    do {
        x--;
        if (x == 5) continue;
    } while (x > 0);
}

