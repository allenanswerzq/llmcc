#define PI 3.14159
#define SQUARE(x) ((x) * (x))
#define MAX(a, b) ((a) > (b) ? (a) : (b))

double circle_area(double r) {
    return PI * SQUARE(r);
}

int find_max(int a, int b) {
    return MAX(a, b);
}

