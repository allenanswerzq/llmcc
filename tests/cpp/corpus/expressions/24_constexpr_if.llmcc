template<typename T>
auto process(T value) {
    if constexpr (sizeof(T) == 1) {
        return static_cast<int>(value);
    } else if constexpr (sizeof(T) == 4) {
        return value;
    } else {
        return static_cast<long long>(value);
    }
}

