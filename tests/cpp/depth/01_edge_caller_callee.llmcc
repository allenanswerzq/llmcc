    n3[label="helper", path="$TMP/sample/src/main.cpp:1"];
    n4[label="process", path="$TMP/sample/src/main.cpp:3", sym_ty="Function", shape=ellipse];
    n5[label="process", path="$TMP/sample/src/main.cpp:3"];
    n7[label="main", path="$TMP/sample/src/main.cpp:7", sym_ty="Function", shape=ellipse];
    n8[label="main", path="$TMP/sample/src/main.cpp:7"];
  }


  n2 -> n3 [from="caller", to="callee"];
