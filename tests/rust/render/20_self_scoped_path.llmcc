(root:1 lib ($TMP/sample/src/lib.rs))

(root:2 utils ($TMP/sample/src/utils.rs)
  (class:3 Wrapper
    (field:4 inner @type:6 Helper)
  )
)

(root:5 helper ($TMP/sample/src/utils/helper.rs)
  (class:6 Helper
    (field:7 id @type u32)
  )
)

