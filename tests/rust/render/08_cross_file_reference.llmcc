===============================================================================
cross-file-reference
===============================================================================
Test that types defined in different files within the same crate create edges.

--- file: sample/Cargo.toml ---
[package]
name = "sample"

--- file: sample/src/lib.rs ---
mod types;
mod services;

pub use types::User;
pub use services::UserService;

--- file: sample/src/types.rs ---

pub struct User {
    pub id: u64,
    pub name: String,
}

--- file: sample/src/services.rs ---
use crate::types::User;

pub struct UserService {
    pub current_user: User,
}

pub fn get_user() -> User {
    User { id: 1, name: "Alice".to_string() }
}

--- expect:block-graph ---
(root:1 lib ($TMP/sample/src/lib.rs))

(root:2 types ($TMP/sample/src/types.rs)
  (class:3 User
    (field:4 id @type u64)
    (field:5 name @type String)
  )
)

(root:6 services ($TMP/sample/src/services.rs)
  (class:7 UserService
    (field:8 current_user @type:3 User)
  )
  (func:9 get_user
    (return:10 @type:3 User)
  )
)

