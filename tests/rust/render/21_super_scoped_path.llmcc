===============================================================================
super-scoped-path
===============================================================================
Uses super:: prefix for parent module paths.

--- file: sample/Cargo.toml ---
[package]
name = "sample"

--- file: sample/src/lib.rs ---
pub struct Base {
    pub id: u32,
}

mod inner {
    pub struct Child {
        pub base: super::Base,
    }
}

--- expect:block-graph ---
(root:1 lib ($TMP/sample/src/lib.rs)
  (class:2 Base
    (field:3 id @type u32)
  )
  (module:4 inner (inline)
    (class:5 Child
      (field:6 base @type:2 Base)
      (@tdep:2 Base)
    )
  )
)

--- expect:arch-graph ---
digraph architecture {
  rankdir=TB;
  ranksep=0.6;
  nodesep=0.3;
  splines=ortho;
  compound=true;

  node [shape=box, style=rounded];
  edge [arrowsize=0.7];

  subgraph cluster_sample {
    label="sample";
    style=rounded;
        bgcolor="#f8f8f8";

    subgraph cluster_lib_rs {
      label="lib.rs";
      style=rounded;
            bgcolor="#fafafa";

      n2[label="Base", path="$TMP/sample/src/lib.rs:1", sym_ty="Struct", shape=box];
      n5[label="Child", path="$TMP/sample/src/lib.rs:6", sym_ty="Struct", shape=box];
    }

  }


  n2 -> n5 [from="field_type", to="struct"];
}
