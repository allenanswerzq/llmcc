===============================================================================
simple-struct
===============================================================================
Test that a simple struct appears in the architecture graph.

--- file: sample/Cargo.toml ---
[package]
name = "sample"


--- file: sample/src/lib.rs ---

struct Foo;

pub struct User {
    pub name: Foo,
    pub age: i32,
}

--- expect:arch-graph ---
digraph architecture {
  rankdir=TB;
  ranksep=0.6;
  nodesep=0.3;
  splines=ortho;
  compound=true;

  node [shape=box, style=rounded];
  edge [arrowsize=0.7];

  subgraph cluster_sample {
    label="sample";
    style=rounded;
        bgcolor="#f8f8f8";

    subgraph cluster_lib_rs {
      label="lib.rs";
      style=rounded;
            bgcolor="#fafafa";

      n2[label="Foo", path="$TMP/sample/src/lib.rs:2", sym_ty="Struct", shape=box];
      n3[label="User", path="$TMP/sample/src/lib.rs:4", sym_ty="Struct", shape=box];
    }

  }


  n2 -> n3 [from="field_type", to="struct"];
}
