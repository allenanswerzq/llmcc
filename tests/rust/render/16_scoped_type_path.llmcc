===============================================================================
scoped-type-path
===============================================================================
Field uses fully scoped path type (module::Type).

--- file: sample/Cargo.toml ---
[package]
name = "sample"

--- file: sample/src/lib.rs ---
mod types;

pub struct Container {
    pub item: types::Item,
}

--- file: sample/src/types.rs ---
pub struct Item {
    pub id: u32,
}

--- expect:block-graph ---
(root:1 lib ($TMP/sample/src/lib.rs)
  (class:2 Container
    (field:3 item @type:5 Item)
  )
)

(root:4 types ($TMP/sample/src/types.rs)
  (class:5 Item
    (field:6 id @type u32)
  )
)

