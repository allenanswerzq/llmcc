===============================================================================
public-function
===============================================================================
Test that public free functions appear in the architecture graph,
but private functions do not.

--- file: sample/Cargo.toml ---
[package]
name = "sample"

--- file: sample/src/lib.rs ---

struct Input;
enum Output {}
struct Foo;
impl Foo {
    fn new() -> Foo {}
}

pub fn process_data(input: Input) -> Output {
    let f = Foo::new();
    helper(input)
}

fn helper(s: Input) -> Output {
    Output
}

--- expect:block-graph ---
(root:1 lib ($TMP/sample/src/lib.rs)
  (class:2 Input)
  (enum:3 Output)
  (class:4 Foo)
  (impl:5 Foo @type:4
    (method:6 new
      (return:7 @type:4 Foo)
      (@tdep:4 Foo)
    )
  )
  (func:8 process_data
    (parameter:9 input @type:2 Input)
    (return:10 @type:3 Output)
    (@tdep:3 Output)
    (@tdep:4 Foo)
    (@fdep:13 helper)
  )
  (func:13 helper
    (parameter:14 s @type:2 Input)
    (return:15 @type:3 Output)
    (@tdep:3 Output)
  )
)

