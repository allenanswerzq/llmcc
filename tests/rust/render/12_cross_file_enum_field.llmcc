===============================================================================
cross-file-enum-field
===============================================================================
Enum variant in one file uses struct from another file.

--- file: sample/Cargo.toml ---
[package]
name = "sample"

--- file: sample/src/lib.rs ---
mod data;
mod message;

--- file: sample/src/data.rs ---
pub struct Payload {
    pub bytes: Vec<u8>,
}

--- file: sample/src/message.rs ---
use crate::data::Payload;

pub enum Message {
    Empty,
    Data { payload: Payload },
}

--- expect:block-graph ---
(root:1 lib ($TMP/sample/src/lib.rs)
  (module:2 data)
  (module:3 message)
)

(root:4 data ($TMP/sample/src/data.rs)
  (class:5 Payload
    (field:6 bytes @type bytes)
  )
)

(root:7 message ($TMP/sample/src/message.rs)
  (enum:8 Message
    (field:9 Empty)
    (field:10 Data
      (field:11 payload @type:5 Payload)
    )
  )
)

