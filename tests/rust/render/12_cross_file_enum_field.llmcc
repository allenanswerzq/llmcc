===============================================================================
cross-file-enum-field
===============================================================================
Enum variant in one file uses struct from another file.

--- file: sample/Cargo.toml ---
[package]
name = "sample"

--- file: sample/src/lib.rs ---
mod data;
mod message;

--- file: sample/src/data.rs ---
pub struct Payload {
    pub bytes: Vec<u8>,
}

--- file: sample/src/message.rs ---
use crate::data::Payload;

pub enum Message {
    Empty,
    Data { payload: Payload },
}

--- expect:block-graph ---
(root:1 lib ($TMP/sample/src/lib.rs))

(root:2 data ($TMP/sample/src/data.rs)
  (class:3 Payload
    (field:4 bytes @type bytes)
  )
)

(root:5 message ($TMP/sample/src/message.rs)
  (enum:6 Message
    (field:7 Empty @type:6 Empty)
    (field:8 Data @type:6 Data
      (field:9 payload @type:3 Payload)
    )
  )
)

