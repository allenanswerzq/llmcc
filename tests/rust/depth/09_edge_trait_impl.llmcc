===============================================================================
edge-trait-impl
===============================================================================
Test that trait->impl edges create correct dependency direction.
When struct S implements trait T, S's crate depends on T's crate.
At crate level: crate_app -> crate_traits (app depends on traits)

--- file: traits/Cargo.toml ---
[package]
name = "traits"

--- file: traits/src/lib.rs ---
pub trait Processor {
    fn process(&self);
}

--- file: app/Cargo.toml ---
[package]
name = "app"

[dependencies]
traits = { path = "../traits" }

--- file: app/src/lib.rs ---
use traits::Processor;

pub struct MyProcessor;

impl Processor for MyProcessor {
    fn process(&self) {
        // implementation
    }
}

--- expect:arch-graph-depth-3 ---
digraph architecture {
  rankdir=TB;
  ranksep=0.6;
  nodesep=0.3;
  splines=ortho;
  compound=true;

  node [shape=box, style=rounded];
  edge [arrowsize=0.7];

  subgraph cluster_app {
    label="app";
    bgcolor="#f8f8f8";

    subgraph cluster_lib_rs {
      label="lib.rs";
      bgcolor="#fafafa";

      n6[label="MyProcessor", full_path="$TMP/app/src/lib.rs:3", sym_ty="Struct", shape=box];
    }

  }

  subgraph cluster_traits {
    label="traits";
    bgcolor="#f8f8f8";

    subgraph cluster_lib_rs {
      label="lib.rs";
      bgcolor="#fafafa";

      n2[label="Processor", full_path="$TMP/traits/src/lib.rs:1", sym_ty="Trait", shape=box];
    }

  }


  n2 -> n6 [from="trait", to="impl"];
}

