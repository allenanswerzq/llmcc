===============================================================================
macro-definition
===============================================================================


--- file: src/main.rs ---
macro_rules! say_hello {
    () => (
        println!("Hello!");
    )
}

macro_rules! four {
    () => {1 + 3};
}

macro_rules! foo {
    (x => $e:expr) => (println!("mode X: {}", $e));
    (y => $e:expr) => (println!("mode Y: {}", $e))
}

macro_rules! o_O {
    (
      $($x:expr; [ $( $y:expr ),* ]);*
    ) => {
      $($($x + $e),*),*
    }
}

macro_rules! zero_or_one {
    ($($e:expr),?) => {
        $($e),?
    };
}

macro_rules! empty [
    () => {};
];

--- expect:symbols ---
u0:1 | Macro | say_hello   | say_hello   | [global]
u0:2 | Macro | four        | four        | [global]
u0:3 | Macro | foo         | foo         | [global]
u0:4 | Macro | o_O         | o_O         | [global]
u0:5 | Macro | zero_or_one | zero_or_one | [global]
u0:6 | Macro | empty       | empty       | [global]

