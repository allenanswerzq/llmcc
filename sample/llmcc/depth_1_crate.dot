digraph architecture {
  // Layout settings
  rankdir=TB;
  ranksep=0.8;
  nodesep=0.4;
  splines=ortho;
  concentrate=true;

  node [shape=box, style="rounded,filled", fillcolor="#f0f0f0", fontname="Helvetica"];
  edge [color="#666666", arrowsize=0.7];

  labelloc=t;
  fontsize=16;
  fontname="Helvetica Bold";

  crate_llmcc_bindings[label="llmcc-bindings"];
  crate_llmcc_cli[label="llmcc-cli"];
  crate_llmcc_core[label="llmcc-core"];
  crate_llmcc_resolver[label="llmcc-resolver"];
  crate_llmcc_rust[label="llmcc-rust"];
  crate_llmcc_test[label="llmcc-test"];

  crate_llmcc_bindings -> crate_llmcc_cli;
  crate_llmcc_cli -> crate_llmcc_core;
  crate_llmcc_cli -> crate_llmcc_resolver;
  crate_llmcc_resolver -> crate_llmcc_core;
  crate_llmcc_rust -> crate_llmcc_core;
  crate_llmcc_rust -> crate_llmcc_resolver;
  crate_llmcc_test -> crate_llmcc_cli;
  crate_llmcc_test -> crate_llmcc_core;
  crate_llmcc_test -> crate_llmcc_resolver;
}
