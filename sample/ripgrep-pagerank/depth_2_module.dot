digraph architecture {
  // Layout settings
  rankdir=TB;
  ranksep=0.8;
  nodesep=0.4;
  splines=ortho;
  concentrate=true;

  node [shape=box, style="rounded,filled", fillcolor="#f0f0f0", fontname="Helvetica"];
  edge [color="#666666", arrowsize=0.7];

  labelloc=t;
  fontsize=16;
  fontname="Helvetica Bold";

  mod_globset_lib[label="globset::lib"];
  mod_grep_cli_decompress[label="grep-cli::decompress"];
  mod_grep_cli_process[label="grep-cli::process"];
  mod_grep_matcher_lib[label="grep-matcher::lib"];
  mod_grep_printer_hyperlink[label="grep-printer::hyperlink"];
  mod_grep_printer_standard[label="grep-printer::standard"];
  mod_grep_printer_util[label="grep-printer::util"];
  mod_grep_searcher_line_buffer[label="grep-searcher::line_buffer"];
  mod_grep_searcher_searcher[label="grep-searcher::searcher"];
  mod_grep_searcher_sink[label="grep-searcher::sink"];
  mod_ignore_dir[label="ignore::dir"];
  mod_ignore_gitignore[label="ignore::gitignore"];
  mod_ignore_lib[label="ignore::lib"];
  mod_ignore_walk[label="ignore::walk"];
  mod_ripgrep_core[label="ripgrep::core"];
  mod_ripgrep_flags[label="ripgrep::flags"];
  mod_ripgrep_main[label="ripgrep::main"];

  mod_grep_cli_decompress -> mod_grep_cli_process;
  mod_grep_printer_standard -> mod_grep_printer_util;
  mod_grep_printer_util -> mod_grep_matcher_lib;
  mod_grep_printer_util -> mod_grep_searcher_searcher;
  mod_grep_printer_util -> mod_ignore_lib;
  mod_grep_searcher_searcher -> mod_grep_matcher_lib;
  mod_grep_searcher_searcher -> mod_grep_searcher_line_buffer;
  mod_grep_searcher_searcher -> mod_grep_searcher_sink;
  mod_ignore_dir -> mod_ignore_gitignore;
  mod_ignore_gitignore -> mod_globset_lib;
  mod_ignore_walk -> mod_globset_lib;
  mod_ignore_walk -> mod_grep_cli_process;
  mod_ignore_walk -> mod_ignore_dir;
  mod_ignore_walk -> mod_ripgrep_flags;
  mod_ripgrep_core -> mod_grep_cli_process;
  mod_ripgrep_core -> mod_grep_matcher_lib;
  mod_ripgrep_flags -> mod_grep_printer_hyperlink;
  mod_ripgrep_main -> mod_ripgrep_flags;
}
