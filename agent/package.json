{
  "name": "llmcc-agent-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Workspace for llmcc agent packages",
  "workspaces": [
    "bridge",
    "chrome",
    "llcraft",
    "tools"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:bridge": "npm run build --workspace=bridge",
    "build:chrome": "npm run build --workspace=chrome",
    "build:llcraft": "npm run build --workspace=llcraft",
    "build:tools": "npm run build --workspace=tools",
    "test": "npm run test --workspaces --if-present",
    "test:tools": "npm run test --workspace=tools",
    "test:bridge": "npm run test --workspace=bridge",
    "test:integration": "npm run test:integration --workspace=bridge"
  }
}
