{
  "name": "copilot-api-bridge",
  "displayName": "Copilot API Bridge",
  "description": "Expose VS Code Copilot models as an OpenAI-compatible API for external tools like Codex or Claude Code",
  "version": "0.2.4",
  "publisher": "local",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-api-bridge.start",
        "title": "Start Server",
        "category": "Copilot API Bridge"
      },
      {
        "command": "copilot-api-bridge.stop",
        "title": "Stop Server",
        "category": "Copilot API Bridge"
      },
      {
        "command": "copilot-api-bridge.status",
        "title": "Show Status",
        "category": "Copilot API Bridge"
      }
    ],
    "configuration": {
      "title": "Copilot API Bridge",
      "properties": {
        "copilot-api-bridge.port": {
          "type": "number",
          "default": 5168,
          "description": "Port number for the API bridge server"
        },
        "copilot-api-bridge.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the server when VS Code opens"
        },
        "copilot-api-bridge.bindAddress": {
          "type": "string",
          "default": "0.0.0.0",
          "enum": ["127.0.0.1", "0.0.0.0"],
          "description": "Bind address for the server. Use 127.0.0.1 for localhost only"
        },
        "copilot-api-bridge.defaultModel": {
          "type": "string",
          "default": "claude-sonnet-4",
          "description": "Default model to use when not specified in request"
        },
        "copilot-api-bridge.allowedOrigins": {
          "type": "array",
          "default": ["*"],
          "description": "Allowed CORS origins (use '*' for all)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package --no-dependencies",
    "test": "node --import tsx --test tests/unit/*.test.ts",
    "test:integration": "node --import tsx --test tests/integration.test.ts",
    "test:all": "npm run test && npm run test:integration"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@llmcc/tools": "*"
  }
}
